<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/faded"
    tools:context=".SentenceSeeker">

    <TextView
        android:id="@+id/typeSentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:text="@string/typeSentenceText"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sentenceInput"
        android:layout_width="294dp"
        android:layout_height="38dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/typeSentence"
        app:layout_constraintStart_toStartOf="@+id/typeSentence"
        app:layout_constraintTop_toBottomOf="@+id/typeSentence" />

    <SeekBar
        android:id="@+id/seekThroughSentence"
        android:layout_width="333dp"
        android:layout_height="48dp"
        android:layout_marginTop="128dp"
        app:layout_constraintEnd_toEndOf="@+id/sentenceInput"
        app:layout_constraintStart_toStartOf="@+id/sentenceInput"
        app:layout_constraintTop_toBottomOf="@+id/wordOutput"/>

    <TextView
        android:id="@+id/wordOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/sentenceInput"
        app:layout_constraintStart_toStartOf="@+id/sentenceInput"
        app:layout_constraintTop_toBottomOf="@+id/sentenceInput" />
</androidx.constraintlayout.widget.ConstraintLayout>